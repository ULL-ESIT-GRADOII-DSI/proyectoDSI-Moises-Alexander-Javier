<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link type="text/css" rel="stylesheet" href="assets/materialize/css/profile.css">
	
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
		
			
	<script src="http://code.jquery.com/jquery.min.js"></script>
	<script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
	<script src="./funciones.js"></script>
	<script src="./jquery.collapse.js"></script>
	
	<script>
        new jQueryCollapse($(".tareas-pendientes"), {
          open: function() {
            this.slideDown(150);
          },
          close: function() {
            this.slideUp(150);
          }
        });
    </script> 	
		
</head>
<body>
	<div class="container">
	
		<div class="text-center" style="margin-top:-70px; padding:0;">
			<h1>Hola, <%= user.local.email %>!</h1>
		</div>
	
	
		<div class="row" style="margin-top:100px;">
			<div class="col-xs-12 col-sm-4">
				<div class="">
					<h3><span class=""></span> Datos Personales </h3>
	
					<% if (user.local.email) { %>
						<p>
							<strong>id</strong>: <%= user._id %><br>
							<strong>email</strong>: <%= user.local.email %><br>
						</p>
					<% } %>
					<% if (user.google.token) { %>
						<p>
							<strong>id</strong>: <%= user.google.id %><br>
							<strong>token</strong>: <%= user.google.token %><br>
							<strong>email</strong>: <%= user.google.email %><br>
							<strong>name</strong>: <%= user.google.name %>
						</p>
					<% } %>
				</div>
			</div>
			
			<div class="col-xs-12 col-sm-8">
				<ul class="nav nav-tabs">
				  <li class="active"><a href="#anadir" data-toggle="tab">AÃ±adir</a></li>
				  <li><a href="#pendientes" data-toggle="tab">Pendientes</a></li>
				  <li><a href="#terminadas" data-toggle="tab">Terminadas</a></li>
				</ul>
	
				<div class="tab-content">
					<div class="tab-pane fade in active" id="anadir">
						<form action="/anadir">
							<label for="nombre">Tarea</label>
							<input id="nombre" type="text" name="nombre" placeholder="Nombre y Apellido"/>
							<br>
							<label for="informacion">Informacion:</label>
							<textarea id="informacion" name="informacion" placeholder="Escribe aqui la tarea a realizar"></textarea>
							<br>
							<label for="fecha">Fecha:</label>
							<input id="fecha" type="date" name="fecha" placeholder="Fecha"/>
							<br>
							<input id="submit" type="submit" name="submit" value="Guardar" />
						</form>
						
					</div>
					<div class="tab-pane fade" id="pendientes">
						<button id="button"> Ver tareas</button>
						<% if (user.local.email) { %>
						<h3 style="text-align:center">
							Tus tareas son:
						</h3>
						<% } %>
						
						<div class="tareas-pendientes">
				        </div>
					</div>
					<div class="tab-pane fade" id="terminadas">
						<h2> y tu?</h2>
						<div class="tareas-terminadas">
							
						</div>
						
					</div>
				</div>	
			</div>
		</div>
	
		<div class="row" style="text-align:center; margin-top:20%; margin-bottom:20px;">
			<button><a href="/logout" class="btn btn-default">Cerrar Sesion</a></button>
		</div>

		    		 
	</div>
</body>
</html>